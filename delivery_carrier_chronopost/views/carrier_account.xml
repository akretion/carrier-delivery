<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_chronopost_carrier_account_form" model="ir.ui.view">
        <field name="model">carrier.account</field>
        <field name="inherit_id" ref="base_delivery_carrier_label.carrier_account_view_form"/>
        <field name="arch" type="xml">
            <field name="account" position="after">
                <field name="chronopost_subaccount" attrs="{'invisible': [('name', '!=', 'chronopost')]}"/>
            </field>
            <field name="password" position="after">
                <field name="chronopost_file_format" attrs="{'invisible': [('name', '!=', 'chronopost')], 'required': [('name', '=', 'chronopost')]}"/>
            </field>
        </field>
    </record>

</odoo>
